  "description": "KOSG - Personalized Entertainment Discovery Platform with MongoDB and React",
  "main": "index.js",
  "scripts": {
    "start": "npm --prefix backend run start",
    "install-all": "npm install && cd backend && npm install && cd ../project && npm install",
